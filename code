const fieldSpecificTitles = {
  "Software Developer": ["Stack Overflow Survivor 🏆", "Legacy Code Whisperer 👻", "Agile Waterfall Enthusiast 🌊", "Semicolon Sentinel 😤", "Spaghetti Code Chef 🍝"],
  "Design": ["Whitespace Wrangler ⬜", "Font Fetishist 🔤", "Gradient Guru 🌈", "Skeuomorph Slayer 🗡️", "Responsive Design Rodeo Clown 🤹‍♂️"],
  "Data": ["Data Janitor 🧹", "Correlation Coincidence Curator 🎲", "Outlier Outlaw 🤠", "Big Data Bard 📊", "Statistical Significance Seeker 🔍"],
  "Marketing": ["Viral Wannabe 🦠", "Hashtag Hero #️⃣", "Lead Leprechaun 🍀", "Vanity Metrics Vanguard 🦚", "Content Mill Maestro 🎭"],
  "Finance": ["Bitcoin Billionaire (in Monopoly money) 🎩", "Excel Escape Artist 📉", "Blockchain Believer (still) ⛓️", "HODL Hodor 🚪", "Derivative Daydreamer 💭"],
  "Product Manager": ["Feature Creep Wrangler 🤠", "Backlog Hoarder 🗃️", "Scope Creep Whisperer 🤫", "User Story Poet 📜", "Pivot Master 🔄"],
  "Account Manager": ["Corporate Schmoozer 🍸", "Red Tape Ninja ⚔️", "Milestone Mirage Maker 🏜️", "Scope Creep Firefighter 🧯", "Client Whisperer 🤫"],
  "General": ["Thought Follower 🐑", "Disruptor (of naps) 😴", "Synergy Synthesizer 🎛️", "Paradigm Shift Reverser ↩️", "Low-Hanging Fruit Picker 🍎"]
};

const getRandomElement = (arr) => arr[Math.floor(Math.random() * arr.length)];

const exaggerateTitle = (title) => {
  const exaggerations = [
    (t) => `Master of ${t}`,
    (t) => `${t} Extraordinaire`,
    (t) => `${t} Virtuoso`,
    (t) => `Chief ${t} Officer`,
    (t) => `${t} Jedi`,
    (t) => `${t} Guru`,
    (t) => `${t} Ninja`,
    (t) => `${t} Whisperer`,
    (t) => `${t} Mastermind`,
    (t) => `Supreme ${t}`,
  ];
  return getRandomElement(exaggerations)(title);
};

const getField = (input) => {
  const lowercaseInput = input.toLowerCase();
  if (lowercaseInput.includes('software') || lowercaseInput.includes('developer')) return "Software Developer";
  if (lowercaseInput.includes('design') || lowercaseInput.includes('ux') || lowercaseInput.includes('ui')) return "Design";
  if (lowercaseInput.includes('data') || lowercaseInput.includes('analytics')) return "Data";
  if (lowercaseInput.includes('marketing') || lowercaseInput.includes('growth')) return "Marketing";
  if (lowercaseInput.includes('finance') || lowercaseInput.includes('accounting')) return "Finance";
  if (lowercaseInput.includes('product manager')) return "Product Manager";
  if (lowercaseInput.includes('account manager')) return "Account Manager";
  return "General";
};

const transformDescription = (input, intensity) => {
  const field = getField(input);
  let result = exaggerateTitle(input);

  // Add field-specific buzzwords
  const buzzwordCount = Math.floor(intensity / 2) + 2;
  const selectedBuzzwords = new Set();
  while (selectedBuzzwords.size < buzzwordCount) {
    selectedBuzzwords.add(getRandomElement(fieldSpecificBuzzwords[field]));
  }
  result += " | " + Array.from(selectedBuzzwords).join(" | ");

  // Add field-specific titles
  const titleCount = Math.floor(intensity / 3) + 1;
  const selectedTitles = new Set();
  while (selectedTitles.size < titleCount) {
    selectedTitles.add(getRandomElement(fieldSpecificTitles[field]));
  }
  result += " | " + Array.from(selectedTitles).join(" | ");

  return result;
};

const LinkedInJobDescriptionAmplifier = () => {
  const [input, setInput] = useState('');
  const [output, setOutput] = useState('');
  const [intensity, setIntensity] = useState(5);

  const handleTransform = () => {
    setOutput(transformDescription(input, intensity));
  };

  const handleCopy = () => {
    navigator.clipboard.writeText(output).then(() => {
      alert('Amplified job description copied to clipboard!');
    });
  };

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gradient-to-r from-blue-400 to-indigo-600 p-4">
      <div className="max-w-2xl w-full bg-white rounded-lg shadow-lg p-6">
        <h1 className="text-3xl font-bold text-gray-800 mb-2 text-center">LinkedIn Job Description Amplifier</h1>
        <p className="text-xl text-gray-600 mb-6 text-center">Skyrocket your professional brand with synergistic jargon!</p>
        <textarea
          className="w-full p-2 border rounded mb-4 h-32"
          placeholder="Enter your current job description here..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <div className="flex items-center justify-between mb-4">
          <label className="flex items-center">
            <Sliders className="mr-2" />
            Jargon Intensity: {intensity}
          </label>
          <input
            type="range"
            min="1"
            max="10"
            value={intensity}
            onChange={(e) => setIntensity(Number(e.target.value))}
            className="w-1/2"
          />
        </div>
        <div className="flex justify-center space-x-4 mb-4">
          <button
            onClick={handleTransform}
            className="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors duration-200 flex items-center"
          >
            <Wand2 size={20} className="mr-2" />
            Amplify My Description
          </button>
          <button
            onClick={() => setInput('')}
            className="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition-colors duration-200 flex items-center"
          >
            <RefreshCw size={20} className="mr-2" />
            Reset
          </button>
        </div>
        <div className="bg-gradient-to-r from-purple-200 to-pink-200 p-4 rounded-md mb-4 min-h-[100px] shadow-inner">
          <p className="text-gray-800 font-bold text-lg leading-relaxed">
            {output || "Your amplified job description will appear here..."}
          </p>
        </div>
        <div className="flex justify-center">
          <button
            onClick={handleCopy}
            className="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition-colors duration-200 flex items-center"
            disabled={!output}
          >
            <Copy size={20} className="mr-2" />
            Copy Amplified Description
          </button>
        </div>
      </div>
    </div>
  );
};

export default LinkedInJobDescriptionAmplifier;
